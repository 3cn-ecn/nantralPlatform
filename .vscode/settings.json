{
  // auto-formatting
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.formatOnSave": true,
  "editor.codeActionsOnSave": {
    "source.fixAll": "explicit"
  },
  "editor.insertSpaces": true,
  "editor.rulers": [80],
  "editor.tabSize": 2,
  // languages
  "files.associations": {
    "*.html": "html",
    "**/backend/**/*.html": "django-html",
    "**/*.py": "python",
    "**/*.js": "javascript",
    "**/*.jsx": "javascriptreact",
    "**/*.ts": "typescript",
    "**/*.tsx": "typescriptreact",
    "**/docs/**/*.mdx": "mdx",
    "requirements.txt": "pip-requirements",
    "Pipfile": "toml"
  },
  // python formatting
  "[python]": {
    "editor.tabSize": 4,
    "editor.defaultFormatter": "charliermarsh.ruff",
    "editor.codeActionsOnSave": {
      "source.fixAll": "explicit",
      "source.organizeImports": "explicit"
    }
  },
  "[django-html]": {
    "editor.defaultFormatter": "batisteo.vscode-django"
  },
  "[toml]": {
    "editor.defaultFormatter": "tamasfe.even-better-toml"
  },
  "python.analysis.autoImportCompletions": true,
  "python.analysis.typeCheckingMode": "off",
  "python.analysis.extraPaths": ["./backend"],
  "python.autoComplete.extraPaths": ["./backend"],
  // python env
  "python.defaultInterpreterPath": "${workspaceFolder}/backend/.venv/",
  "python.envFile": "${workspaceFolder}/backend/config/settings/.env",
  "python.terminal.activateEnvironment": false,
  // python docstring
  "autoDocstring.docstringFormat": "numpy",
  // js extension
  "eslint.workingDirectories": ["./frontend", "./email-templates-generator"],
  // docs formatting
  "[mdx][markdown]": {
    "editor.tabSize": 3,
    "editor.codeActionsOnSave": {
      "source.organizeImports": "never"
    }
  },
  "[mdx]": {
    // redundant: fix MDX extension
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "mdx.server.enable": false,
  // i18n-ally (react translations)
  "i18n-ally.localesPaths": "frontend/src/shared/i18n",
  "i18n-ally.enabledFrameworks": ["react", "general"],
  "i18n-ally.pathMatcher": "{locale}.json",
  "i18n-ally.keystyle": "nested",
  "i18n-ally.sourceLanguage": "fr-FR",
  "i18n-ally.displayLanguage": "fr-FR",
  "i18n-ally.sortKeys": true,
  "i18n-ally.indent": 2,
  "i18n-ally.tabStyle": "space",
  "i18n-ally.usage.scanningIgnore": ["backend/", "docs/", "ckeditor.js"],
  // cSpell (grammar checker)
  "cSpell.language": "en,fr",
  "cSpell.enableFiletypes": ["mdx"],
  "cSpell.words": [
    "ariane",
    "ckeditor",
    "coeff",
    "colocathlon",
    "colocathlons",
    "django",
    "itii",
    "ITII",
    "nantes",
    "nantral",
    "Nantral",
    "pipenv",
    "testid",
    "viewsets"
  ],
  // customization (change color of the bottom bar)
  "workbench.colorCustomizations": {
    "statusBar.background": "#c02837",
    "statusBar.foreground": "#fcfcfc"
  }
}
