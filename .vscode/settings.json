{
  // auto-formatting
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.formatOnSave": true,
  "editor.codeActionsOnSave": {
    "source.fixAll": true,
    "source.organizeImports": true
  },
  "editor.insertSpaces": true,
  "editor.rulers": [80],
  "editor.tabSize": 2,
  // languages
  "files.associations": {
    "*.html": "html",
    "**/backend/**/*.html": "django-html",
    "**/*.py": "python",
    "**/*.js": "javascript",
    "**/*.jsx": "javascriptreact",
    "**/*.ts": "typescript",
    "**/*.tsx": "typescriptreact",
    "**/docs/**/*.md": "mdx",
    "requirements.txt": "pip-requirements",
    "Pipfile": "toml"
  },
  // python formatting
  "[python]": {
    "editor.tabSize": 4,
    "editor.defaultFormatter": "ms-python.black-formatter"
  },
  "[django-html]": {
    "editor.formatOnSave": false
  },
  "flake8.args": ["--config", "backend/.flake8"],
  "black-formatter.args": ["--config", "backend/pyproject.toml"],
  "isort.args": ["--settings-path", "backend/pyproject.toml"],
  // python env
  "python.defaultInterpreterPath": "${workspaceFolder}/backend/.venv/",
  "python.envFile": "${workspaceFolder}/backend/config/settings/.env",
  "python.terminal.activateEnvironment": false,
  // python docstring
  "autoDocstring.docstringFormat": "numpy",
  // i18n-ally (react translations)
  "i18n-ally.localesPaths": "frontend/src/shared/i18n",
  "i18n-ally.enabledFrameworks": ["react", "general"],
  "i18n-ally.pathMatcher": "{locale}.json",
  "i18n-ally.keystyle": "nested",
  "i18n-ally.sourceLanguage": "fr-FR",
  "i18n-ally.displayLanguage": "fr-FR",
  "i18n-ally.sortKeys": true,
  "i18n-ally.indent": 2,
  "i18n-ally.tabStyle": "space",
  "i18n-ally.usage.scanningIgnore": ["backend/", "docs/", "ckeditor.js"],
  // cSpell (grammar checker)
  "cSpell.language": "en,fr",
  "cSpell.enableFiletypes": ["mdx"],
  "cSpell.words": [
    "ariane",
    "ckeditor",
    "coeff",
    "colocathlon",
    "colocathlons",
    "django",
    "itii",
    "ITII",
    "nantes",
    "nantral",
    "Nantral",
    "pipenv",
    "testid",
    "viewsets"
  ],
  // customization (change color of the bottom bar)
  "workbench.colorCustomizations": {
    "statusBar.background": "#c02837",
    "statusBar.foreground": "#fcfcfc"
  }
}
