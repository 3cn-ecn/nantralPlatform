{
  "editor.formatOnSave": true,
  "editor.formatOnPaste": true,
  "editor.insertSpaces": true,
  "editor.rulers": [80],
  "files.associations": {
    "*.html": "html",
    "**/backend/**/*.html": "django-html",
    "**/*.py": "python",
    "**/*.js": "javascript",
    "**/*.jsx": "javascript",
    "**/src/**/*.js": "javascriptreact",
    "**/src/**/*.jsx": "javascriptreact",
    "**/*.ts": "typescript",
    "**/*.tsx": "typescript",
    "**/src/**/*.ts": "typescriptreact",
    "**/src/**/*.tsx": "typescriptreact",
    "**/docs/**/*.md": "mdx",
    "requirements.txt": "pip-requirements",
    "Pipfile": "toml"
  },
  "[python]": {
    "editor.tabSize": 4
  },
  "[django-html][html][javascript][javascriptreact][typescript][typescriptreact][json][css][scss]": {
    "editor.tabSize": 2
  },
  "[django-html]": {
    "editor.formatOnSave": false
  },
  "workbench.colorCustomizations": {
    "statusBar.background": "#c02837",
    "statusBar.foreground": "#fcfcfc"
  },
  "python.defaultInterpreterPath": "${workspaceFolder}/backend/.venv/",
  "python.envFile": "${workspaceFolder}/backend/config/settings/.env",
  "python.terminal.activateEnvironment": false,
  "python.formatting.provider": "autopep8",
  "python.linting.enabled": true,
  "python.linting.flake8Enabled": true,
  "python.linting.pydocstyleEnabled": true,
  "python.linting.pydocstyleArgs": ["--ignore=D100,D102,D213,D400,D407"],
  "python.analysis.typeCheckingMode": "off",
  "python.analysis.extraPaths": ["./backend"],
  "autoDocstring.docstringFormat": "numpy",
  "docwriter.style": "NumPy",
  "cSpell.language": "en,fr",
  "cSpell.enableFiletypes": ["mdx"],
  "cSpell.words": [
    "ariane",
    "coeff",
    "colocathlon",
    "colocathlons",
    "django",
    "itii",
    "ITII",
    "nantes",
    "nantral",
    "Nantral",
    "pipenv",
    "testid"
  ],
  "i18n-ally.localesPaths": "frontend/src/translations",
  "i18n-ally.enabledFrameworks": ["react", "general"],
  "i18n-ally.pathMatcher": "{locale}.json",
  "i18n-ally.keystyle": "nested",
  "i18n-ally.sourceLanguage": "fr-FR",
  "i18n-ally.displayLanguage": "fr-FR",
  "i18n-ally.sortKeys": true,
  "i18n-ally.indent": 2,
  "i18n-ally.tabStyle": "space"
}
