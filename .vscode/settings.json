{
  "editor.formatOnSave": false,
  "editor.insertSpaces": true,
  "editor.rulers": [80],
  "files.associations": {
    "*.html": "html",
    "**/backend/**/*.html": "django-html",
    "**/*.py": "python",
    "**/*.js": "javascript",
    "**/*.jsx": "javascript",
    "**/src/**/*.js": "javascriptreact",
    "**/src/**/*.jsx": "javascriptreact",
    "**/*.ts": "typescript",
    "**/*.tsx": "typescript",
    "**/src/**/*.ts": "typescriptreact",
    "**/src/**/*.tsx": "typescriptreact",
    "**/docs/**/*.md": "mdx",
    "requirements.txt": "pip-requirements",
    "Pipfile": "toml"
  },
  "[python]": {
    "editor.tabSize": 4
  },
  "[django-html][html][javascript][javascriptreact][typescript][typescriptreact][json]": {
    "editor.tabSize": 2
  },
  "python.defaultInterpreterPath": "${workspaceFolder}/backend/.venv/",
  "python.envFile": "${workspaceFolder}/backend/config/settings/.env",
  "python.terminal.activateEnvironment": false,
  "python.formatting.provider": "autopep8",
  "python.linting.enabled": true,
  "python.linting.flake8Enabled": true,
  "python.linting.pydocstyleEnabled": true,
  "python.linting.pydocstyleArgs": ["--ignore=D100,D102,D213,D400,D407"],
  "autoDocstring.docstringFormat": "numpy",
  "docwriter.style": "NumPy",
  "cSpell.language": "en,fr",
  "cSpell.words": [
    "ariane",
    "banniere",
    "coeff",
    "colocathlon",
    "colocathlons",
    "itii",
    "ITII",
    "nantes",
    "nantral",
    "Nantral"
  ]
}
